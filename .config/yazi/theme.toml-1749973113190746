# : Manager [[[

[manager]
cwd = { fg = "#e9e2d4" }

# Tab
tab_active = { fg = "#3b2f00", bg = "#dec56e", bold = true }
tab_inactive = { fg = "#fbe186", bg = "#221b00" }
tab_width = 1

# Find
find_keyword = { fg = "#ffb4ab", bold = true, italic = true, underline = true }
find_position = { fg = "#ffb4ab", bold = true, italic = true }

# Marker
marker_copied = { fg = "#7ad388", bg = "#7ad388" }
marker_cut = { fg = "#c6eccc", bg = "#c6eccc" }
marker_marked = { fg = "#ffb4ab", bg = "#ffb4ab" }
marker_selected = { fg = "#abd0b1", bg = "#abd0b1" }

# Count
count_copied = { fg = "#00210e", bg = "#c6eccc" }
count_cut = { fg = "#00210e", bg = "#c6eccc" }
count_selected = { fg = "#3b2f00", bg = "#abd0b1" }

# Border
border_symbol = "│"
border_style  = { fg = "#dec56e" }

# : ]]]


