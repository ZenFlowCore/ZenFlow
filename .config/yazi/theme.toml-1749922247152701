# : Manager [[[

[manager]
cwd = { fg = "#dee3e5" }

# Tab
tab_active = { fg = "#00363e", bg = "#83d2e3", bold = true }
tab_inactive = { fg = "#a2eeff", bg = "#001f25" }
tab_width = 1

# Find
find_keyword = { fg = "#ffb4ab", bold = true, italic = true, underline = true }
find_position = { fg = "#ffb4ab", bold = true, italic = true }

# Marker
marker_copied = { fg = "#758cff", bg = "#758cff" }
marker_cut = { fg = "#dbe1ff", bg = "#dbe1ff" }
marker_marked = { fg = "#ffb4ab", bg = "#ffb4ab" }
marker_selected = { fg = "#bcc5eb", bg = "#bcc5eb" }

# Count
count_copied = { fg = "#101a37", bg = "#dbe1ff" }
count_cut = { fg = "#101a37", bg = "#dbe1ff" }
count_selected = { fg = "#00363e", bg = "#bcc5eb" }

# Border
border_symbol = "│"
border_style  = { fg = "#83d2e3" }

# : ]]]


# : Status [[[

